extends ../shared/template

block content
  h1 New Song

  form(method='POST', action='/songs', enctype='multipart/form-data')
    input(type='text', name='name', placeholder='New Song Name')
    input(type='text', name='genre', placeholder='Genre')
    input(type='file', name='music', multiple=false)
    select(name='albums')
      each album in albums
        option(value=album._id)= album.name
    select(name='artists')
      each artist in artists
        option(value=artist._id)= artist.name
    button Add Song
